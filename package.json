{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "src/**/*.+(ts|tsx)": "bash -c 'npm run check-types'",
    "src/**/*.+(js|ts|tsx|json)": "npm run check-lint",
    "src/**/*.+(js|ts|tsx|json|md)": "npm run check-format"
  },
  "scripts": {
    "dev": "craco start",
    "prod": "NODE_ENV=production craco start",
    "build": "NODE_ENV=production craco build",
    "check-types": "tsc -p ./tsconfig.json --pretty --noEmit",
    "check-format": "prettier --check src",
    "check-lint": "eslint src --ext ts --ext tsx --ext js",
    "check-all": "npm run check-format && npm run check-lint && npm run check-types",
    "format": "prettier --write .",
    "test": "craco test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.27",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.52.1",
    "typescript": "^4.6.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24"
  }
}
